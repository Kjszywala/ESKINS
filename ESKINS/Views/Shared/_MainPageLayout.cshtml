<style>
	.card::before {
		content: "";
		position: absolute;
		top: -50%;
		width: 100%;
		height: 100%;
		background: transparent;
		transform: skewY(345deg);
		transition: 0.5s;
	}

	.card {
		box-shadow: black 0px 20px 30px -10px;
		transition: 0.3s;
		margin-bottom: 11px;
	}

	.card:hover {
		box-shadow: 0 0 2px 2px #5600b2;
		transform: scale(1.05);
	}

	#smallButton {
		margin-left: -50px;
		margin-top: -90px;
		text-align: left;
		border-radius: 20px;
		background-color: transparent;
		color: white;
		background-color: #181716;
	}

		#smallButton:hover {
			background-color: #333333;
		}
</style>
