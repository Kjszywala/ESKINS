	<div class="card-container"
		 style="display: flex;
		overflow: hidden;
		margin-top: -20px;
		height: 240px;
		animation: gradient 15s ease infinite;
		border-bottom: medium">
		@{
			Random rnd = new Random();
			for (int i = 0; i < 40; i++)
			{
				<div class="card" style="animation: moveCards 10s linear infinite; margin-right: 20px;margin-top:20px; height: 200px; flex: 0 0 200px;">
