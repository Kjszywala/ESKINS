@model List<ESKINS.DbServices.Models.CartModels>



<div class="modal-dialog" role="document" style="background-color: #222222; max-width: 1000px;">
    <div class="modal-content" style="background-color: #222222; max-width: 1000px;">
        <div id="successMessage" class="success-message" style="display: none;">Funds added successfully!</div>
        <div id="waitingCircle"></div>
        <div class="modal-header" style="background-color: #222222; color:white; display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h5 class="modal-title" id="paymentModalLabel" style="margin: 0 auto;">Shopping Cart</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="row row21">
            <div class="col-6 col21" style="float:left;">
                <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Your products</h3>
            </div>
            <div class="col-6 col21" style="float:right;">
                <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Payment</h3>
            </div>
        </div>
        <hr />
        <center>
            <div class="modal-body">
                <div class="col-lg-6 px-5 py-4 " style="height: 300px; overflow: auto;">
                    <div class="d-flex align-items-center mb-5">
                        <div class="flex-shrink-0">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp"
                                 class="img-fluid" style="width: 150px;" alt="Generic placeholder image">
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <a href="#!" class="float-end text-black"><i class="fas fa-times"></i></a>
                            <h5 class="text-primary">Samsung Galaxy M11 64GB</h5>
                            <h6 style="color: #9e9e9e;">Color: white</h6>
                            <div class="d-flex align-items-center">
                                <p class="fw-bold mb-0 me-5 pe-3">799$</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-5">
                        <div class="flex-shrink-0">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp"
                                 class="img-fluid" style="width: 150px;" alt="Generic placeholder image">
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <a href="#!" class="float-end text-black"><i class="fas fa-times"></i></a>
                            <h5 class="text-primary">Samsung Galaxy M11 64GB</h5>
                            <h6 style="color: #9e9e9e;">Color: white</h6>
                            <div class="d-flex align-items-center">
                                <p class="fw-bold mb-0 me-5 pe-3">799$</p>
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <div class="d-flex justify-content-between px-x">
                        <p class="fw-bold">Discount:</p>
                        <p class="fw-bold">95$</p>
                    </div>
                    <div class="d-flex justify-content-between p-2 mb-2" style="background-color: #333;">
                        <h5 class="fw-bold mb-0">Total:</h5>
                        <h5 class="fw-bold mb-0">2261$</h5>
                    </div>

                </div>
                <div class="col-lg-6 px-5 py-4">
                    <div class="form-outline mb-5">
                        <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                value="1234 5678 9012 3457" minlength="19" maxlength="19" />
                        <label class="form-label" for="typeText">Card Number</label>
                    </div>

                    <div class="form-outline mb-5">
                        <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                value="John Smith" />
                        <label class="form-label" for="typeName">Name on card</label>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-5">
                            <div class="form-outline">
                                <input type="text" id="typeExp" class="form-control form-control-lg" value="01/22"
                                        size="7" id="exp" minlength="7" maxlength="7" />
                                <label class="form-label" for="typeExp">Expiration</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-5">
                            <div class="form-outline">
                                <input type="password" id="typeText" class="form-control form-control-lg"
                                        value="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                <label class="form-label" for="typeText">Cvv</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="useCardDetailsCheckbox">
                            <label class="form-check-label" for="useCardDetailsCheckbox">
                                Use Card Details
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="payWithWalletCheckbox">
                            <label class="form-check-label" for="payWithWalletCheckbox">
                                Pay with Wallet Funds
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </center>
        <div class="modal-footer" style="background-color: #222222; color:white;">
            <button type="button" class="btn button-36">Buy now</button>
            <button type="button" class="btn button-36">Back to shopping</button>
        </div>
    </div>
</div>

<style>
    .row21 {
        display: flex;
        color:white;
    }

    .col21 {
        flex: 1;
    }
    #waitingCircle {
        display: none;
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid green;
        border-radius: 50%;
        animation: spin 2s linear infinite;
        margin: 0 auto;
        margin-bottom: 10px;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .success-message {
        background-color: #4CAF50;
        color: #ffffff;
        padding: 10px;
        border-radius: 4px;
        text-align: center;
        margin-bottom: 10px;
    }

    .modal-body {
        background-color: #222222;
        color: #fff;
        margin-bottom: 20px;
    }

    .amount-input {
        margin-bottom: 20px;
    }

        .amount-input .textbox {
            background-color: #333;
            color: #fff;
            border: 1px solid #555;
            padding: 10px;
            border-radius: 5px;
        }

            .amount-input .textbox:focus {
                outline: none;
                box-shadow: 0 0 3px #888;
            }

    .modal-footer {
        margin-top: 20px;
    }

    .modal-body img {
        filter: invert(1);
    }

    .modal-body {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

        .modal-body .item {
            height: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: transparent;
            border: 1px solid #111;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            padding: 10px;
        }

            .modal-body .item:hover {
                background-color: #333;
            }

            .modal-body .item.selected {
                background-color: #444;
                color: #fff;
            }

            .modal-body .item img {
                width: 100px;
                height: auto;
                background-color: transparent;
                border: none;
                margin-left: 10px;
            }
    /* buttons */
    .button-36 {
        background-image: linear-gradient(92.88deg, #455EB5 9.16%, #5643CC 43.89%, #673FD7 64.72%);
        border-radius: 8px;
        border-style: none;
        box-sizing: border-box;
        color: #FFFFFF;
        cursor: pointer;
        flex-shrink: 0;
        font-family: "Inter UI","SF Pro Display",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Open Sans","Helvetica Neue",sans-serif;
        font-size: 16px;
        font-weight: 500;
        height: 4rem;
        padding: 0 1.6rem;
        text-align: center;
        text-shadow: rgba(0, 0, 0, 0.25) 0 3px 8px;
        transition: all .5s;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

        .button-36:hover {
            box-shadow: rgba(80, 63, 205, 0.5) 0 1px 30px;
            transition-duration: .1s;
        }

    @@media (min-width: 768px) {
        .button-36 {
            padding: 0 2.6rem;
        }
    }
</style>
