@model List<ESKINS.DbServices.Models.ItemsModels>
@{
    Layout = "_MainPageLayout";
}
@section head{
}
    <header class="privacy">
        <h2>Shopping Cart</h2>
    </header>
    <br />
    <section style="color:white;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card1">
                        <div class="table-responsive" style="overflow: auto; max-height:400px; margin:20px; border-radius: 10px;">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" style="text-align: center;">Shopping Bag</th>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Quality</th>
                                        <th scope="col">Discount</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model){
                                        <tr style="height: 150px;">
                                             <td class="align-middle">
                                                <img src="data:image;base64,@Convert.ToBase64String(item.ItemImage)" class="img-fluid rounded-3"
                                                     style="width: 120px;" alt="Book">
                                            </td>
                                            <td class="align-middle">
                                                <p class="mb-2">@item.ProductName</p>
                                                <p class="mb-0">@item.Category.CategoryDescription</p>
                                                <p class="mb-0" style="font-weight: 500;">@item.Exterior.Exterior</p>
                                            </td>
                                            <td class="align-middle">
                                                <p class="mb-0" style="font-weight: 500;">@item.Quality.Quality</p>
                                            </td>
                                            <td class="align-middle">
                                                <p class="mb-0" style="font-weight: 500;">@(Math.Round(item.Discount * 100)) %</p>
                                            </td>
                                            <td class="align-middle">
                                                <p class="mb-0" style="font-weight: 500;">£ @item.ActualPrice</p>
                                            </td>
                                            <td class="align-middle">
                                                <button type="submit" class="button-36">Remove</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="card1 shadow-2-strong mb-5 mb-lg-0" style="border-radius: 16px;">
                        <div class="card1-body p-4">
                            <div class="row">
                                <div class="col-md-6 col-lg-4 col-xl-3 mb-4 mb-md-0">
                                    <div class="d-flex flex-row pb-3 ">
                                        <div class="d-flex align-items-center pe-2">
                                            <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel1v"
                                                    value="" aria-label="..." checked />
                                        </div>
                                    <div class="rounded border w-100 p-3  mouse-over">
                                            <p class="d-flex align-items-center mb-0">
                                                <i class="fab fa-cc-mastercard fa-2x text-dark pe-2"></i>Credit
                                                Card
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row pb-3">
                                        <div class="d-flex align-items-center pe-2">
                                            <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel2v"
                                                    value="" aria-label="..." />
                                        </div>
                                    <div class="rounded border w-100 p-3  mouse-over">
                                            <p class="d-flex align-items-center mb-0">
                                                <i class="fab fa-cc-visa fa-2x fa-lg text-dark pe-2"></i>Debit Card
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <div class="d-flex align-items-center pe-2">
                                            <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel3v"
                                                    value="" aria-label="..." />
                                        </div>
                                    <div class="rounded border w-100 p-3  mouse-over">
                                            <p class="d-flex align-items-center mb-0">
                                                <i class="fab fa-cc-paypal fa-2x fa-lg text-dark pe-2"></i>PayPal
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4 col-xl-6">
                                    <div class="row">
                                        <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                                       placeholder="John Smith" />
                                                <label class="form-label" for="typeName">Name on card</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YY"
                                                       size="7" minlength="7" maxlength="7" />
                                                <label class="form-label" for="typeExp">Expiration</label>
                                            </div>
                                        </div>
                                        <div class="col-12 col-xl-6">
                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                                       placeholder="1111 2222 3333 4444" minlength="19" maxlength="19" />
                                                <label class="form-label" for="typeText">Card Number</label>
                                            </div>

                                            <div class="form-outline mb-4 mb-xl-5">
                                                <input type="password" id="typeText" class="form-control form-control-lg"
                                                       placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                                <label class="form-label" for="typeText">Cvv</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-xl-3">
                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-2">Subtotal</p>
                                        <p class="mb-2">$23.49</p>
                                    </div>

                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-0">Shipping</p>
                                        <p class="mb-0">$2.99</p>
                                    </div>

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4" style="font-weight: 500;">
                                        <p class="mb-2">Total (tax included)</p>
                                        <p class="mb-2">$26.48</p>
                                    </div>
                                    <div class="center-align">
                                        <button type="button" class="button-36" style="min-width: 200px;">
                                            <div class="d-flex justify-content-between">
                                                <span>Checkout</span>
                                                <span>$26.48</span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <br />
