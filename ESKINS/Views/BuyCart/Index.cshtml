        console.log('Selected payment method:', method);
    }

    function applyGradientShadow(element) {
        element.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06)';
        element.style.background = 'linear-gradient(to bottom right, #8c6bff, #00ff9b)';
        element.style.color = 'white';
    }

    function removeGradientShadow(element) {
        element.style.boxShadow = '';
        element.style.background = '';
        element.style.color = '';
    }
