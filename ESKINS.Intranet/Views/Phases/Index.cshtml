@model List<ESKINS.DbServices.Models.PhasesModels>

@{
    ViewBag.Title = "Phases";
}
@section head{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="css/tablestyles.css" />
}
<h2 class="text-center">Phases</h2>
<br />
<div id="createButton" style="margin: 7px; text-align:center;">
    <button class="btn btn-success" type="submit" onclick="location.href='@Url.Action("Create", "Phases")'">Create New</button>
</div>
<br />
<div>
    <div>
        <div>
            <table id="myTable" class="table table-bordered table-striped dark-mode" style="margin: auto;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Is Active</th>
                        <th>CreationDate</th>
                        <th>ModificationDate</th>
                        <th>Phase</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@(item.IsActive ? "Yes" : "No")</td>
                            <td>@item.CreationDate</td>
                            <td>@item.ModificationDate</td>
                            <td>@item.Phase</td>
                            <td>
                                @Html.ActionLink("Edit", "#", new { Id = item.Id }, new { @class = "btn btn-success edit-link", data_toggle = "modal", data_target = "#editModal", model = this, data_parameter = item.Id })
                                @Html.ActionLink("Delete", "Delete", "Phases", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@*Modal Window for Edit Phases*@
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPhasesLabel">Edit Phase</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editPhasesForm" action="@Url.Action("Edit", "Phases")" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="Id" name="Id" />
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="isActive">Active:</label>
                        <select class="form-control" id="isActive" name="isActive" required>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="phase">Phase:</label>
                        <input type="text" class="form-control" id="phase" name="phase" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="editPhasesForm" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(".edit-link").on("click", function () {
            // Get the ID from the data-parameter attribute
            var id = $(this).data("parameter");

            // Set the value of the hidden input field in the form
            $("#editPhasesForm input[name=Id]").val(id);

            // Make an AJAX request to fetch the data for the selected payment method
            $.ajax({
                url: "/Phases/GetPhase/" + id,
                type: "GET",
                success: function (data) {
                    // Populate the form fields with the data from the server
                    $("#editPhasesForm input[name=title]").val(data.title);
                    $("#editPhasesForm select[name=isActive]").val(data.isActive.toString());
                    $("#editPhasesForm input[name=phase]").val(data.phase);
                    $("#editPhasesModal").modal("show");
                }
            });
        });
    </script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true, // Enable pagination
                "ordering": true, // Enable sorting
                "searching": true // Enable search box
            });
        });
    </script>
}
