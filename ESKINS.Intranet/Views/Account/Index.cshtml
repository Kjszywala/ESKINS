@model ESKINS.DbServices.Models.UsersModels

@{
    ViewData["Title"] = "Log in";
    Layout = "_LoginLayout";
}
@section head{
    @*<link href="~/css/logreg.css" type="text/css" rel="stylesheet" />*@
    <link href="~/css/login.css" type="text/css" rel="stylesheet" />
}
<center>
    <h4 style="color:#8B0000;">@ViewBag.ErrorMessage</h4>
</center>
<div class="body" style="height: 1000px;">
    <div class="veen" style="width:90%; margin-top:-50px;">
        <div class="login-btn splits">
            <p>Already an user?</p>
            <button class="active">Login</button>
        </div>
        <div class="rgstr-btn splits">
            <p>Don't have an account?</p>
            <button>Register</button>
        </div>
        <div class="wrapper">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "login" }))
            {
                <h3>Login</h3>
                <div class="mail">
                    <input type="text" name="email">
                    <label>E-mail</label>
                </div>
                <div class="passwd">
                    <input type="text" name="password">
                    <label>Password</label>
                </div>
                <div class="submit">
                    <button class="dark" id="login-submit">Log in</button>
                </div>
            }
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "register" }))
            {
                <h3>Register</h3>
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName)
                    <div class="name">
                        @Html.EditorFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName, "")
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName)
                    <div class="name">
                        @Html.EditorFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName, "")
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    <div class="name">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email, "")
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    <div class="name">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "")
                    </div>
                </div>
                <div class="submit">
                    <button class="dark">Register</button>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".veen .rgstr-btn button").click(function () {
            $('.veen .wrapper').addClass('move');
            $('.body').css('background', 'transpatent');
            $(".veen .login-btn button").removeClass('active');
            $(this).addClass('active');

        });
        $(".veen .login-btn button").click(function () {
            $('.veen .wrapper').removeClass('move');
            $('.body').css('background', 'transpatent');
            $(".veen .rgstr-btn button").removeClass('active');
            $(this).addClass('active');
        });
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}