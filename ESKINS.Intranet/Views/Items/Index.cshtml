@model List<ESKINS.DbServices.Models.ItemsModels>

@{
    ViewBag.Title = "Payment Methods";
}
@section head{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
}
<h2 class="text-center">Payment Methods</h2>
<br />
<div id="createButton" style="margin: 7px; text-align:center;">
    <button class="btn btn-success" type="submit" onclick="location.href='@Url.Action("Create", "Items")'">Create New</button>
</div>
<br />
<div>
    <div>
        <div class="centerDiv">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ModificationDate</th>
                        <th>ProductName</th>
                        <th>SerialNumber</th>
                        <th>User</th>
                        <th>Category</th>
                        <th>StatTrack</th>
                        <th>ItemCollection</th>
                        <th>Phase</th>
                        <th>Exterior</th>
                        <th>ActualPrice</th>
                        <th>OnSale</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ModificationDate</td>
                            <td>@item.ProductName</td>
                            <td>@item.SerialNumber</td>
                            <td>@item.User?.Email</td>
                            <td>@item.Category?.CategoryDescription</td>
                            @*<td>@Html.DisplayFor(modelItem => item.CategoryId)</td>*@
                            <td>@item.StatTrack</td>
                            <td>@item.ItemCollection?.ItemCollection</td>
                            <td>@item.Phase?.Phase</td>
                            <td>@item.Exterior?.Exterior</td>
                            <td>@item.ActualPrice</td>
                            <td>@item.OnSale</td>
                            <td>
                                @if (item.ItemImage != null)
                                {
                                    <img src="data:image;base64,@Convert.ToBase64String(item.ItemImage)" alt="@item.ItemImage" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "#", new { Id = item.Id }, new { @class = "btn btn-success edit-link", data_toggle = "modal", data_target = "#editModal", model = this, data_parameter = item.Id })
                                @Html.ActionLink("Delete", "Delete", "PaymentMethods", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(".edit-link").on("click", function () {
            // Get the ID from the data-parameter attribute
            var id = $(this).data("parameter");

            // Set the value of the hidden input field in the form
            $("#editPaymentForm input[name=Id]").val(id);

            // Make an AJAX request to fetch the data for the selected payment method
            $.ajax({
                url: "/PaymentMethods/GetPaymentMethod/" + id,
                type: "GET",
                success: function (data) {
                    // Populate the form fields with the data from the server
                    $("#editPaymentForm input[name=title]").val(data.title);
                    $("#editPaymentForm select[name=isActive]").val(data.isActive.toString());
                    $("#editPaymentForm input[name=imageName]").val(data.imageName);
                    $("#editPaymentModal").modal("show");
                }
            });
        });
    </script>
    }

@*Modal Window for Edit payment method*@
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPaymentModalLabel">Edit Payment Method</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editPaymentForm" action="@Url.Action("Edit", "PaymentMethods")" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="Id" name="Id" />
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="isActive">Active:</label>
                        <select class="form-control" id="isActive" name="isActive" required>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="imageName">Image Name:</label>
                        <input type="text" class="form-control" id="imageName" name="imageName" required>
                    </div>
                    <div class="form-group">
                        <label for="image">Image:</label>
                        <input type="file" class="form-control-file" id="image" name="image" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="editPaymentForm" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
<style>
