@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if(SignInManager.IsSignedIn(User))
{
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search serial number..." aria-label="Search">
            <button class="btn btn-outline-secondary" type="submit" style="margin-right: 5px;">Search</button>
    </form>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-secondary">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <form class="nav-link" action="@Url.Action("Index", "Account")">
            <button type="submit" class="btn btn-outline-secondary">Register</button>
        </form>
    </li>
    <li class="nav-item">
        <form class="nav-link" action="@Url.Action("Index", "Account")">
                <button type="submit" class="btn btn-outline-secondary">Login</button>
        </form>
    </li>
}
</ul>
