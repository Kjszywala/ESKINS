@model List<ESKINS.DbServices.Models.PaymentMethodsModels>

@{
    ViewBag.Title = "Payment Methods";
}
@section head{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
}
<h2 class="text-center">Payment Methods</h2>
<br />
<div id="createButton" style="margin: 7px; text-align:center;">
    <button class="btn btn-success" type="submit" onclick="location.href='@Url.Action("Create", "PaymentMethods")'">Create New</button>
</div>
<br />
<div>
    <div>
        <div>
            <table class="table table-bordered table-striped" style="margin: auto;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Is Active</th>
                        <th>Image</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var paymentMethod in Model)
                    {
                        <tr>
                            <td>@paymentMethod.Id</td>
                            <td>@paymentMethod.Title</td>
                            <td>@(paymentMethod.IsActive ? "Yes" : "No")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(paymentMethod.ImageName) && paymentMethod.Image != null)
                                {
                                    <img src="data:image;base64,@Convert.ToBase64String(paymentMethod.Image)" alt="@paymentMethod.ImageName" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                }
                            </td>
                            <td>
                               @* @Html.ActionLink("Edit", "#", new { Id = paymentMethod.Id }, new { @class = "btn btn-success", data_toggle = "modal", data_target = "#editModal", model = this, data_parameter=paymentMethod.Id })*@
                                @Html.ActionLink("Edit", "#", new { Id = paymentMethod.Id }, new { @class = "btn btn-success edit-link", data_toggle = "modal", data_target = "#editModal", model = this, data_parameter = paymentMethod.Id })
                                @Html.ActionLink("Details", "Details", new { id = paymentMethod.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", "PaymentMethods", new { id = paymentMethod.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(".edit-link").on("click", function () {
            // Get the ID from the data-parameter attribute
            var id = $(this).data("parameter");

            // Set the value of the hidden input field in the form
            $("#editPaymentForm input[name=Id]").val(id);

            // Make an AJAX request to fetch the data for the selected payment method
            $.ajax({
                url: "/PaymentMethods/GetPaymentMethod/" + id,
                type: "GET",
                success: function (data) {
                    // Populate the form fields with the data from the server
                    $("#editPaymentForm input[name=title]").val(data.title);
                    $("#editPaymentForm select[name=isActive]").val(data.isActive.toString());
                    $("#editPaymentForm input[name=imageName]").val(data.imageName);
                    $("#editPaymentModal").modal("show");
                }
            });
        });
    </script>
    }
@*Modal Window for Edit payment method*@
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPaymentModalLabel">Edit Payment Method</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editPaymentForm" action="@Url.Action("Edit", "PaymentMethods")" method="post">
                    <input type="hidden" id="Id" name="Id"/>
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="form-group">
                        <label for="isActive">Active:</label>
                        <select class="form-control" id="isActive" name="isActive">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="imageName">Image Name:</label>
                        <input type="text" class="form-control" id="imageName" name="imageName">
                    </div>
                    <div class="form-group">
                        <label for="image">Image:</label>
                        <input type="file" class="form-control-file" id="image" name="image">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="editPaymentForm" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
<script >
    var parameter;
    $("#editActionLink").on("click", function () {
        //save your parameter in variable
        parameter = $("#editActionLink").data("parameter");
    });
    $(document).ready(function () {
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var id = parameter // Extract info from data-* attributes
            var title = button.data('title')
            var isActive = button.data('isactive')
            var imageName = button.data('imagename')
            var modal = $(this)
            modal.find('.modal-body #Id').val(id)
            modal.find('.modal-body #title').val(title)
            modal.find('.modal-body #isActive').val(isActive)
            modal.find('.modal-body #imageName').val(imageName)
        })
    });
</script>
